  number       = {2},
  journaltitle = {Journal of Economic Perspectives},
  shortjournal = {Journal of Economic Perspectives},
  author       = {Allcott, Hunt and Gentzkow, Matthew},
  urldate      = {2024-11-17},
  date         = {2017-05-01},
  langid       = {english},
  keywords     = {Social network, Relevance, Definition, Platform Algorithms, Theory},
  file         = {Allcott und Gentzkow - 2017 - Social Media and Fake News in the 2016 Election.pdf:/Users/Yannick/Zotero/storage/2AQHYUGE/Allcott und Gentzkow - 2017 - Social Media and Fake News in the 2016 Election.pdf:application/pdf}
